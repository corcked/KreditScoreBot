[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    env,
    build,
    dist,
    migrations,
    .pytest_cache,
    .mypy_cache
ignore = 
    # Missing whitespace after ','
    E231,
    # Line too long
    E501,
    # Do not use variables named 'I', 'O', or 'l'
    E741,
    # Line break before binary operator
    W503,
    # Line break after binary operator
    W504
per-file-ignores =
    __init__.py:F401
max-complexity = 10